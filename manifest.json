{
    "manifest_version": 2,
    "name": "Ethical Overlay GPT Plugin",
    "version": "0.1",
    "description": "Shows ethical ownership and manufacture info using ChatGPT",
    "permissions": ["tabs", "storage", "activeTab", "scripting"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "public/icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "48": "public/icon.png"
    }
  }
  